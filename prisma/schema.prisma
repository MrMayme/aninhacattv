generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  twitchId  String   @unique
  username  String
  email     String?
  avatar    String?

  createdAt DateTime @default(now())

  logins        LoginHistory[]
  twitchToken   TwitchToken?
  chatSessions  ChatSession[]
}

model LoginHistory {
  id        String   @id @default(cuid())
  userId    String
  loggedAt  DateTime @default(now())
  ip        String?  // opcional
  userAgent String? // opcional

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
}

model TwitchToken {
  id           String   @id @default(cuid())
  userId       String   @unique
  accessToken  String
  refreshToken String
  expiresAt    DateTime
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model ChatSession {
  id        String   @id @default(cuid())
  userId    String
  channel   String

  startedAt DateTime
  endedAt   DateTime? // null = sess√£o ativa

  user User @relation(fields: [userId], references: [id])

  @@index([channel])
  @@index([userId])
  @@index([channel, endedAt])
}